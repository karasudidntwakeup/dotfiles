#!/bin/bash

# Set your photos directory
WALLPAPER_DIR="/home/karasu/Downloads/mp4"

while true; do
    # Pick a random image from the directory
    swww img --transition-step=10 --transition-type=random "$(find "$WALLPAPER_DIR" -type f \( -iname "*.jpg" -o -iname "*.png" -o -iname "*.gif" \) | shuf -n 1)"
    
    # Wait 60 seconds (1 minute)
    sleep 60
done
